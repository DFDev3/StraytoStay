<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Logo o Imagen -->
        <ImageView
            android:id="@+id/imgEntityLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:layout_marginEnd="12dp"
            android:background="@drawable/spinner_background"
            android:contentDescription="Logo de la entidad"/>

        <!-- InformaciÃ³n de la entidad -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEntityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refugio Animal Esperanza"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvEntityAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle 123, Ciudad"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvEntityType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Refugio"
                android:textSize="13sp"
                android:textColor="#FF6200EE" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
