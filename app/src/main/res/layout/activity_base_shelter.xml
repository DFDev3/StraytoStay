<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Main.Shelter.BaseShelterActivity">

    <!-- ðŸ”¹ Header fixed at top -->
    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <!-- ðŸ”¹ Fragment container in the middle, fills remaining space -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ðŸ”¹ Fixed custom bottom navbar -->
    <include
        android:id="@+id/bottomNavbarEntidad"
        layout="@layout/bottom_nav_bar_shelter"/>

</LinearLayout>
