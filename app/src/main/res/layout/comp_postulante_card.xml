<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Foto del postulante -->
        <ImageView
            android:id="@+id/imageFotoPostulante"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_perfil"
            android:background="@drawable/bg_input_rounded"
            android:layout_marginEnd="12dp" />

        <!-- Información del postulante -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNombrePostulante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pérez"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#0D47A1" />

            <TextView
                android:id="@+id/textTelefonoPostulante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel: 3001234567"
                android:textColor="#424242"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textCorreoPostulante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="correo@example.com"
                android:textColor="#616161"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
